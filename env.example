# Environment variables for Capital Marketplace Frontend
# Copy this file to .env.local and update the values

# Application Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Authentication Configuration
NEXT_PUBLIC_AUTH_URL=http://localhost:8000/auth
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Database Configuration (if needed for server-side operations)
DATABASE_URL=postgresql://username:password@localhost:5432/capital_marketplace

# External Services
NEXT_PUBLIC_KNOCK_PUBLIC_API_KEY=your-knock-public-api-key
KNOCK_SECRET_API_KEY=your-knock-secret-api-key

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Email Configuration (if using email services)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# Monitoring and Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=your-sentry-dsn

# Development/Production URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Capital Marketplace
